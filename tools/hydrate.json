        {
            "id": "barclays_uk",
            "description": "Barclays (UK)",
            "website_url": "https://www.barclays.co.uk/",
            "credentials_schema": {
                "json_schema": {
                    "$schema": "http://json-schema.org/draft-07/schema#",
                    "type": "object",
                    "required": [
                        "auth_method", 
                        "last_name", 
                        "passcode", 
                        "memorable_word"
                    ],
                    "properties": {
                        "last_name": {
                            "title": "Last name",
                            "type": "string"
                        },
                        "auth_method": {
                            "type": "object",
                            "title": "How would you like to log in?",
                            "oneOf": [
                                {
                                    "title": "Card number",
                                    "required": ["card_number"],
                                    "properties": {
                                        "card_number": {
                                            "title": "Card number",
                                            "type": "string",
                                            "pattern": "\\d{4}-\\d{4}-\\d{4}-\\d{4}"
                                        }
                                    }
                                },
                                {
                                    "title": "Membership number",
                                    "required": ["membership_number"],
                                    "properties": {
                                        "membership_number": {
                                            "title": "Membership number",
                                            "type": "string",
                                            "pattern": "\\d+"
                                        }
                                    }
                                },
                                {
                                    "title": "Sort code and account number",
                                    "required": ["sort_code", "account_number"],
                                    "properties": {
                                        "sort_code": {
                                            "title": "Sort code",
                                            "type": "string",
                                            "pattern": "\\d{2}-\\d{2}-\\d{2}"
                                        },
                                        "account_number": {
                                            "title": "Account number",
                                            "type": "string",
                                            "pattern": "\\d{8}"
                                        }
                                    }
                                }
                            ]
                        },
                        "passcode": {
                            "title": "Passcode",
                            "type": "string",
                            "pattern": "\\d{5}"
                        },
                        "memorable_word": {
                            "title": "Memorable word",
                            "type": "string"
                        }
                    }
                },
                "ui_schema": {
                    "card_number": {
                        "ui:help": "Format: 0000-0000-0000-0000"
                    },
                    "passcode": {
                        "ui:widget": "password"
                    }
                }
            }
        },
